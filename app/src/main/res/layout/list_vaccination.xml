<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@color/lightPurple">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/bcheckBt"
        android:layout_marginRight="20dp"
        android:src="@drawable/uncheck_box"
        android:clickable="true"
        android:layout_weight="0.1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/tvVaccname"
        android:textColor="@color/purple"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bcheckBt"
        android:textStyle="bold"
        android:layout_weight="0.5" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2014-01-28"
        android:id="@+id/tvVaccDate"
        android:textColor="@color/dim_foreground_disabled_material_light"
        android:clickable="true"
        android:layout_weight="0.4"
        android:layout_marginRight="20dp" />

</LinearLayout>
